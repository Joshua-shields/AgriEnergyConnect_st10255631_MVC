
@model AgriEnergyConnect_st10255631_MVC.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <section>
            @* This form will POST data to the Login action in the Home controller *@
            <form asp-controller="Home" asp-action="Login" method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                @* Display validation summary for any overall model errors *@
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3"> @* Added margin-bottom *@
                    <label asp-for="Username" class="form-label"></label>
                    <input asp-for="Username" class="form-control" />
                    @* Display validation errors specific to the Username field *@
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group mb-3"> @* Added margin-bottom *@
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                    @* Display validation errors specific to the Password field *@
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

            <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>

              
            </form>
        </section>
    </div>
   
</div>

@* Add this section at the end for client-side validation *@
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

