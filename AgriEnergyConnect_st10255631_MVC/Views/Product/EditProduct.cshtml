@model AgriEnergyConnect_st10255631_MVC.Models.Product

@{
    ViewData["Title"] = "Edit Product";
    Layout = "_Layout";
}

<h2>Edit Product: @Model.Name</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FarmerId" /> @*  *@
            <input type="hidden" asp-for="AddedDate" /> @*  *@

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ProductionDate" class="control-label"></label>
                <input asp-for="ProductionDate" type="date" class="form-control" value="@Model.ProductionDate.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="ProductionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="FarmerProducts" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}